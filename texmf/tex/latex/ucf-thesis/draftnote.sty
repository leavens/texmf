% left side  margin note with right bottom at  25pts and 10 in
\def\marginnote#1{
   \typeout{Margin note: #1}
   \special{!userdict begin 
	 /bop-hook{gsave 25 720 translate 90 rotate
         /Times-Roman findfont 11 scalefont setfont
         0 0 moveto 
         (#1) dup stringwidth pop neg 0 rmoveto 
         show 
         grestore}def end
   }
}

